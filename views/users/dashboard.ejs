<%- include('../includes/head.ejs') %>
  <%- include('../includes/navbar.ejs') %>
    <div class="container mx-auto">
      <div class="text-center my-3">
        <h1>USER GAME TABLE</h1>
      </div>
      <div class="card my-4 mx-4">
        <div class="card-header py-3">
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary btn" data-bs-toggle="modal" data-bs-target="#createUsers">
            Create
          </button>
          <%- include('../includes/warn.ejs')%>
        </div>
        <div class="table-responsive-md mx-5 mx-sm-0 mx-md-2">
          <table class="table table-sm table-striped">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Username</th>
                  <th scope="col">Password</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(let user of listUsers){ %>
                  <tr>
                    <td>
                      <%= user.id %>
                    <td>
                      <%= user.username %>
                    </td>
                    <td>
                      <%= user.password %>
                    </td>
                    <td>
                      <a href="/detail/<%= user.id  %>"
                        class="btn btn-outline-warning btn-sm button-update me-2">Detail</a>
                      <a href="delete/<%= user.id  %>" class="btn btn-sm btn-danger"
                        onclick="return confirm('Do you want to delete this user?');">Delete</a>
                      <a href="update/<%= user.id%>" class="btn btn-sm btn-outline-success button-update me-2">
                        Edit
                      </a>
                    </td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </table>
        </div>
      </div>
    </div>
    <%- include('./createUsers.ejs') %>
      <%- include('../includes/end.ejs') %>